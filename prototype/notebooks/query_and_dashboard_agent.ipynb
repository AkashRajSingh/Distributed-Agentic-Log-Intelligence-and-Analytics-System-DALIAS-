import time
import random
import matplotlib.pyplot as plt

# Simulated processed dataset
processed_logs = [{"service":"auth","errors":random.randint(0,20)} for _ in range(50)]

# Faulty API (5 percent failure)
def unreliable_backend():
    if random.random() < 0.05:
        raise Exception("Backend failure")
    return processed_logs

# Retry wrapper proving availability
def query_with_retry(retries=3):
    for attempt in range(retries):
        try:
            return unreliable_backend(), attempt+1
        except:
            time.sleep(0.2)
    return None, retries

success_log = []
fail_log = []

for i in range(100):
    data, attempts = query_with_retry()
    if data is None:
        fail_log.append(i)
    else:
        success_log.append(i)

plt.figure(figsize=(10,4))
plt.scatter(success_log, [1]*len(success_log), label="Success")
plt.scatter(fail_log, [0]*len(fail_log), label="Fail")
plt.yticks([0,1], ["Fail","Success"])
plt.title("Query Availability Test")
plt.legend()
plt.show()
